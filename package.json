{
  "name": "universal-redux-router",
  "version": "0.2.1",
  "description": "A very simple router for Redux and React that works on both server and client",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "npm run build:lib && npm run build:umd && npm run build:examples",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack ./src/index.js ./dist/universal-redux-router.js --output-library UniversalReduxRouter --output-library-target umd --config webpack.config.js",
    "build:examples": "npm run build:examples:basic",
    "build:examples:basic": "webpack ./examples/basic/client.js ./examples/basic/client.dist.js --config webpack.config.js",
    "start:basic": "babel-node examples/basic/server.js",
    "test": "mocha --compilers js:babel-core/register test/*.js"
  },
  "author": {
    "name": "Colin Meinke",
    "email": "hello@colinmeinke.com",
    "url": "colinmeinke.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/colinmeinke/universal-redux-router"
  },
  "bugs": {
    "url": "https://github.com/colinmeinke/universal-redux-router/issues"
  },
  "keywords": [
    "React",
    "Redux",
    "Router",
    "universal"
  ],
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.1.2",
    "babel-core": "^6.1.2",
    "babel-loader": "6.0.1",
    "babel-plugin-syntax-object-rest-spread": "^6.0.14",
    "babel-plugin-transform-react-jsx": "^6.0.18",
    "babel-preset-es2015": "^6.1.2",
    "expect": "^1.12.2",
    "express": "^4.13.3",
    "mocha": "^2.3.3",
    "query-string": "^3.0.0",
    "react": "^0.14.2",
    "react-addons-test-utils": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4",
    "webpack": "^1.12.2"
  },
  "babel": {
    "plugins": [
      "syntax-object-rest-spread",
      "transform-react-jsx"
    ],
    "presets": [
      "es2015"
    ]
  }
}
