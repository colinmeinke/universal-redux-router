{
  "name": "universal-redux-router",
  "version": "0.0.0-semantically-released",
  "description": "A very simple router for Redux and React that works on both server and client",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "commit": "git-cz",
    "build": "npm run build:lib && npm run build:umd",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "npm run build:umd:dev && npm run build:umd:pro",
    "build:umd:dev": "webpack ./src/index.js ./dist/universal-redux-router.js --output-library UniversalReduxRouter --output-library-target umd --config ./webpack.config.js",
    "build:umd:pro": "webpack -p ./src/index.js ./dist/universal-redux-router.min.js --output-library UniversalReduxRouter --output-library-target umd --config ./webpack.config.js",
    "lint": "eslint src test",
    "prepublish": "npm run clean && npm run build",
    "test": "mocha --compilers js:babel-core/register test/**/*.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": {
    "name": "Colin Meinke",
    "email": "hello@colinmeinke.com",
    "url": "colinmeinke.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/colinmeinke/universal-redux-router"
  },
  "bugs": {
    "url": "https://github.com/colinmeinke/universal-redux-router/issues"
  },
  "keywords": [
    "React",
    "Redux",
    "Router",
    "universal"
  ],
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-react-jsx": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "commitizen": "^2.5.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-config-spaced": "^2.0.1",
    "eslint-plugin-react": "^3.16.1",
    "expect": "^1.13.4",
    "mocha": "^2.4.5",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-redux": "^4.1.1",
    "redux": "^3.1.2",
    "rimraf": "^2.5.1",
    "webpack": "^1.12.12",
    "semantic-release": "^4.3.5"
  },
  "peerDependencies": {
    "react": "^0.14.7",
    "redux": "^3.1.2",
    "react-redux": "^4.1.1"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-react-jsx"
    ],
    "presets": [
      "es2015"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
